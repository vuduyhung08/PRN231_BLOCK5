@model FE.Controllers.CreateEvaluationViewModel

<h2>Create Evaluation</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Grade" class="control-label">Grade</label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdditionExplanation" class="control-label">Subject Name</label>
        <select asp-for="AdditionExplanation" class="form-control" asp-items="@(new SelectList(Model.Subjects, "SubjectName", "SubjectName"))">
            <option value="">-- Select Subject --</option>
        </select>
        <span asp-validation-for="AdditionExplanation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentId" class="control-label">Student ID</label>
        <input asp-for="StudentId" class="form-control" readonly />
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Index</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

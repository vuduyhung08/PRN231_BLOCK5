@page
@model FontEnd.Pages.AddStudentClassModel
@{
    ViewData["Title"] = "Add Student to Class";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="studentSelect">Select Student</label>
        <select id="studentSelect" asp-for="StudentId" class="form-control">
            <option value="">--Select Student--</option>
            @foreach (var student in Model.Students)
            {
                <option value="@student.StudentId">@student.Name</option>
            }
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="classSelect">Select Class</label>
        <select id="classSelect" asp-for="ClassId" class="form-control">
            <option value="">--Select Class--</option>
            @foreach (var classItem in Model.Classes)
            {
                <option value="@classItem.ClassId">@classItem.ClassName</option>
            }
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>

@if (Model.ResponseMessage != null)
{
    <div class="alert alert-info mt-3">
        @Model.ResponseMessage
    </div>
}

@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Front_end.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<h2>Reset Password</h2>

<form method="post">
    <input type="hidden" asp-for="Input.Email" />
    <input type="hidden" asp-for="Input.Token" />

    <div class="form-group">
        <label asp-for="Input.Password" class="control-label"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword" class="control-label"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Reset Password" class="btn btn-primary" />
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">
        @Model.Message
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
